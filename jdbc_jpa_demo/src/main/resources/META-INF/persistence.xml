<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="jdbc_jpa_demo" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		//Entities
		<class>prog3.jpa.Student</class>
		<class>prog3.jpa.KITCard</class>

		<properties>

			<!-- LOAD DRIVER -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<!-- DATABASE Destination -->
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpaStudentDB" />
			<!-- AUTHENTICATION -->
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value=""/>

			<!-- Enable for testing-->
			<!-- Basically drop-and-create DB before a new run -->
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>

			<!-- Enable for using-->
			<!--<property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>-->

			<property name="eclipselink.ddl-generation.output-mode"
					  value="database" />

		</properties>
	</persistence-unit>

</persistence>